extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-about
    .inner-wrapper.flex-row-wrap.two-col
      .about-intro-box.box

        //- Replace with your name
        h1= about.name

        //- Feel free to personalize the title below
        p= about.person_title


        .about-bio

          //- Replace the boilerplate below with your best elevator pitch
          p= about.bio
          
          p= about.bio_2

          img(src=`static/img/${about.header_img}`, alt='')

          p= about.context
      .skills-contact-box.box
        h6 Skills

        //- Replace skills below with your own skills â€” at this point, you should be able to list as many as ten skills
        ul
        
          each skill in about.skills 
            li.skills(style=`background: linear-gradient(90deg, #000000 0%, #FFFF 0%)`, data-skills= `${Object.values(skill)}`)= Object.keys(skill)
            

        h6 Contact Info

        //- Replace with your own contact info - feel free to use fake information if you prefer
        ul
          li(style="color: black;") stefancoding7@gmail.com

        //- Add URLs to the hrefs below to link to your social media accounts - feel free to use non-personal links to social media home pages if you prefer
        a.btn-link(href='https://www.linkedin.com/in/stefan-caky-89957113a/', target="_blank") LinkedIn
        a.btn-link(href='https://github.com/stefancoding7', target="_blank") GitHub
        a.btn-link(href='https://www.codester.com/StefanCoding/', target="_blank") Codester

    nav.nav
      a(href='/')
        span &larr;
        |  Back